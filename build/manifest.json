{
    "name": "Chat++ for Chatwork",
    "short_name": "Chat++",
    "version": "5.10.2",
    "manifest_version": 3,
    "description": "An all-in-one Chatwork Enhancement Toolkit which provides many useful features!",
    "content_scripts": [
        {
            "matches": [
                "https://*.chatwork.com/*",
                "https://kcw.kddi.ne.jp/*"
            ],
            "run_at": "document_start",
            "js": ["js/extensions/injectPreloadHook.js"]
        },
        {
            "matches": [
                "https://www.chatwork.com/*",
                "https://kcw.kddi.ne.jp/*"
            ],
            "js": [
                "js/libraries/jquery.min.js",
                "js/extensions/contentscript.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
      "service_worker": "js/extensions/background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["js/libraries/caretposition.js", "js/libraries/fuse.min.js", "js/internals/all.js"],
        "matches": ["http://www.chatwork.com/*"]
      }
    ],
    "action": {
        "default_icon": {
          "16": "img/icon64.png"
        },
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
      "https://www.chatwork.com/*",
      "https://kcw.kddi.ne.jp/*"
    ],
    "options_page": "html/emoticon.html",
    "icons": {
        "32": "img/icon32.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "homepage_url": "http://chatpp.thangtd.com",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
